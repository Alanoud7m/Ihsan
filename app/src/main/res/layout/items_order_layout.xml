<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="25pt"
    android:layout_weight="1"
    android:layoutDirection="rtl"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="10dp">

    `<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charityItemImg"
            android:layout_width="33pt"
            android:layout_height="25pt"
            android:layout_gravity="left"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gp_logo" />

        <LinearLayout
            android:layout_width="44pt"
            android:layout_marginHorizontal="2pt"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2pt"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/charityItemTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وصف القطعة"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/charityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="الجمعية"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3pt"
        android:layout_marginHorizontal="2pt"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد القطع"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/numOfBas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="40pt"
    android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="5pt"
        android:layout_marginVertical="3pt"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المقاس"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ssize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp" />
</LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>