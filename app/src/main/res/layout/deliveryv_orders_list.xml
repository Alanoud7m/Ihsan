<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="470dp"
    android:layout_height="227dp"
    android:layout_weight="1"
    android:layoutDirection="rtl"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="475dp"
        android:layout_height="210dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="475dp"
            android:layout_height="121dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OrderNumLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="45dp"
                    android:text="رقم الطلب: "
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/OrderStatusLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="45dp"
                    android:text="حالة الطلب: "
                    android:textColor="#ECAF74"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/AddressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="45dp"
                    android:text="عنوان التوصيل: "
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OrderNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="....."
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/OrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="....."
                    android:textAlignment="center"
                    android:textColor="#ECAF74"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="....."
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ChangeStatusBtn"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:background="@drawable/button_background"
                android:text="تغيير الحالة" />

            <Button
                android:id="@+id/CancelBtn"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:text="إلغاء" />

            <Button
                android:id="@+id/OrderDetailsBtn"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:text="تفاصيل الطلب" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
