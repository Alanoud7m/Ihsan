<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="48pt"
    android:layout_weight="1"
    android:layoutDirection="rtl"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="13dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="120pt"
        android:layout_height="12pt"
        android:layout_marginHorizontal="7pt"
        android:layout_marginTop="5pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="2pt"
            android:layout_height="wrap_content"
            android:text="رقم الطلب : "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ON"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="2pt"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="120pt"
        android:layout_height="12pt"
        android:layout_marginHorizontal="7pt"
        android:layout_marginTop="19pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="2pt"
            android:layout_height="wrap_content"
            android:text="حالة الطلب : "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/OS"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="2pt"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp" />


    </LinearLayout>

    <Button
        android:id="@+id/DO"
        android:layout_width="35pt"
        android:layout_height="12pt"
        android:layout_gravity="left"
        android:layout_marginHorizontal="3pt"
        android:layout_marginVertical="3pt"
        android:background="@drawable/button_background"
        android:text="تفاصيل الطلب"
        android:textStyle="bold"
        android:textSize="12dp" />

    <Button
    android:id="@+id/EO"
    android:layout_width="35pt"
    android:layout_height="12pt"
    android:layout_gravity="left"
    android:layout_marginHorizontal="2pt"
    android:layout_marginTop="18pt"
    android:background="@drawable/button_background"
    android:text="إلغاء الطلب"
    android:textStyle="bold"
    android:textSize="12dp" />

    <Button
    android:id="@+id/DD"
    android:layout_width="35pt"
    android:layout_height="12pt"
    android:layout_gravity="left"
    android:layout_marginHorizontal="2pt"
     android:layout_marginTop="33pt"
    android:background="@drawable/button_background"
    android:text="تقييم التوصيل"
    android:textStyle="bold"
    android:textSize="12dp" />
    <LinearLayout
        android:layout_width="120pt"
        android:layout_height="12pt"
        android:layout_marginHorizontal="7pt"
        android:layout_marginTop="32pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="2pt"
            android:layout_height="wrap_content"
            android:text="عدد القطع : "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/NOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2pt"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>



</androidx.cardview.widget.CardView>